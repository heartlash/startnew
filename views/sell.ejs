<!-- Header -->
<header class="w3-container w3-red w3-center" style="padding:64px 16px">
  <h1 class="w3-margin w3-jumbo">COLLEGE COMMUNITY</h1>
  <p class="w3-xlarge">SELL PRODUCTS</p>
 
</header>


<!-- First Grid -->
<div class="w3-row-padding w3-light-grey w3-padding-64 w3-container">
  <div class="w3-content">
    <div class="login" >
    <h1>Post Product</h1>


    <form action = "/sell" method = "post" enctype = "multipart/form-data">
    
    <input type = "text" name = "item" placeholder="Enter the itemname"></input>
    <br>
    <input type = "hidden" name = "seller" placeholder="seller" value = "<%=user.username%>"></input>
    <br>
    <textarea name = "description" placeholder="Enter description"></textarea>
    <br><br>
    <input type = "file" name = "image" placeholder="image"></input>
    <br><br>
    <input type = "submit" name = "submit" value = "Submit"></input>
  </form>
   
    </div>
   </div>
</div>

   


